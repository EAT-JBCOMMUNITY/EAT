<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <!--
     *  ΙΔΕΑ : THE JBOSS TESTSUITE TO DEVELOP TESTS AGAINST INFINITE NUMBER OF JBOSS SERVERS
    -->

    <parent>
        <groupId>org.jboss</groupId>
        <artifactId>wildfly-jakarta-additional-testsuite-ejb</artifactId>
        <version>1.0.3.Final</version>
    </parent>

    <artifactId>wildfly-jakarta-additional-testsuite-ejb-configuration3</artifactId>
    <name>wildfly additional testsuite: ejb : configuration3</name>
            
    <properties>
	<standalone.conf>${basedir}/../src/test/config/standaloneWildfly/outbound/client/standalone.xml</standalone.conf>
        <standalone2.conf>${basedir}/../src/test/config/standaloneWildfly/outbound/destination/standalone.xml</standalone2.conf>
        <jboss.modules.dir>${basedir}/../../../../..</jboss.modules.dir>
        <maven.compiler.source>1.8</maven.compiler.source>
        <maven.compiler.target>1.8</maven.compiler.target>
        <server>wildfly</server>
    </properties>
        
    <build>

        <!--
	    Surefire test executions
	 -->
	 <plugins>  
		            
	    <plugin>
		<groupId>org.apache.maven.plugins</groupId>
		<artifactId>maven-surefire-plugin</artifactId>

                <configuration>
                    <!-- Prevent test and server output appearing in console. -->
                    <redirectTestOutputToFile>${testLogToFile}</redirectTestOutputToFile>
                    <failIfNoTests>false</failIfNoTests>

                    <!-- Arquillian's config files. -->
                    <additionalClasspathElements combine.children="append">
                        <additionalClasspathElement>${jboss.modules.dir}/src1/config/arqWildfly</additionalClasspathElement>
                    </additionalClasspathElements>

                    <systemPropertyVariables>
                        <arquillian.launch>outbound</arquillian.launch>
                    </systemPropertyVariables>

                </configuration>

		<executions>
	            <execution>
		        <id>default-test</id>
		        <phase>test</phase>
		        <goals>
		            <goal>test</goal>
		        </goals>
		        <configuration>         
		            <!-- Tests to execute. -->
		            <includes>
		                <include>org/jboss/additional/testsuite/jdkall/present/ejb/client/outbound/connection/*TestCase.java</include>
		            </includes> 
		        </configuration>
		    </execution>
		</executions>
	    </plugin>


            <!-- Build the server configuration -->
	    <plugin>
	        <groupId>org.apache.maven.plugins</groupId>
	        <artifactId>maven-antrun-plugin</artifactId>
	        <executions>
                    <execution>
	                <id>build-basic-config-check</id>
	                <phase>process-test-resources</phase>
	                <goals>
	                    <goal>run</goal>
	                </goals>
	                <configuration>
	                    <target>
                                <ant antfile="${jboss.modules.dir}/src1/test/scripts/clean-deployments.xml">
	                            <property name="serverDir" value="/${jboss.modules.dir}/servers" />
	                            <target name="clean-deployments"/>
	                        </ant>
	                        <ant antfile="${jboss.modules.dir}/src1/test/scripts/basic-build.xml">
	                            <property name="workspace" value="/${jboss.modules.dir}" />
                                    <property name="server" value="${server}" />
                                    <property name="dist" value="jbossas" />
	                            <property name="standaloneConfiguration" value="${standalone.conf}" />
	                            <target name="build-basic-check"/>
	                        </ant>
                                <ant antfile="${jboss.modules.dir}/src1/test/scripts/server-copy.xml">
	                            <property name="workspace" value="/${jboss.modules.dir}" />
                                    <property name="server" value="${server}" />
                                    <property name="serverDir" value="jbossas1" />
	                            <target name="server-copy"/>
	                        </ant>
                                <ant antfile="${jboss.modules.dir}/src1/test/scripts/server-copy.xml">
	                            <property name="workspace" value="/${jboss.modules.dir}" />
                                    <property name="server" value="${server}" />
                                    <property name="serverDir" value="jbossas2" />
	                            <target name="server-copy"/>
	                        </ant>
                                <ant antfile="${jboss.modules.dir}/src1/test/scripts/basic-build.xml">
	                            <property name="workspace" value="/${jboss.modules.dir}" />
                                    <property name="server" value="${server}" />
                                    <property name="dist" value="jbossas1" />
	                            <property name="standaloneConfiguration" value="${standalone.conf}" />
	                            <target name="build-basic-check"/>
	                        </ant>
	                        <ant antfile="${jboss.modules.dir}/src1/test/scripts/basic-build.xml">
	                            <property name="workspace" value="/${jboss.modules.dir}" />
                                    <property name="server" value="${server}" />
                                    <property name="dist" value="jbossas2" />
	                            <property name="standaloneConfiguration" value="${standalone2.conf}" />
	                            <target name="build-basic-check"/>
	                        </ant>
                                <ant antfile="${jboss.modules.dir}/src1/test/scripts/copy-file.xml">
	                            <property name="fileName" value="application-roles.properties" />
                                    <property name="filePath" value="/${jboss.modules.dir}/servers/${server}/build/target/jbossas1/standalone/configuration" />
                                    <property name="fileToCopy" value="${basedir}/src/test/resources/application-roles.properties" />
	                            <target name="copy-file"/>
	                        </ant>
                                <ant antfile="${jboss.modules.dir}/src1/test/scripts/copy-file.xml">
	                            <property name="fileName" value="application-users.properties" />
                                    <property name="filePath" value="/${jboss.modules.dir}/servers/${server}/build/target/jbossas1/standalone/configuration" />
                                    <property name="fileToCopy" value="${basedir}/src/test/resources/application-users.properties" />
	                            <target name="copy-file"/>
	                        </ant>
                                <ant antfile="${jboss.modules.dir}/src1/test/scripts/copy-file.xml">
	                            <property name="fileName" value="application-roles.properties" />
                                    <property name="filePath" value="/${jboss.modules.dir}/servers/${server}/build/target/jbossas2/standalone/configuration" />
                                    <property name="fileToCopy" value="${basedir}/src/test/resources/application-roles.properties" />
	                            <target name="copy-file"/>
	                        </ant>
                                <ant antfile="${jboss.modules.dir}/src1/test/scripts/copy-file.xml">
	                            <property name="fileName" value="application-users.properties" />
                                    <property name="filePath" value="/${jboss.modules.dir}/servers/${server}/build/target/jbossas2/standalone/configuration" />
                                    <property name="fileToCopy" value="${basedir}/src/test/resources/application-users.properties" />
	                            <target name="copy-file"/>
	                        </ant>
	                    </target>
	                </configuration>
	            </execution>
	        </executions>
	    </plugin>

        </plugins> 
		            
    </build>

</project>
