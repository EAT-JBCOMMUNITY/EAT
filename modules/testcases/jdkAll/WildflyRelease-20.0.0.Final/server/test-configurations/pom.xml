<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <!--
     *  ΙΔΕΑ : THE JBOSS TESTSUITE TO DEVELOP TESTS AGAINST INFINITE NUMBER OF JBOSS SERVERS
    -->

    <parent>
        <groupId>org.jboss</groupId>
        <artifactId>wildfly-release-20.0.0.Final-additional-testsuite-server</artifactId>
        <version>1.0.3.Final</version>
    </parent>

    <artifactId>wildfly-release-20.0.0.Final-additional-testsuite-server-configuration</artifactId>
    <name>wildfly release-20.0.0.Final additional testsuite: server : configuration</name>

    <properties>
        <jboss.modules.dir>${basedir}/../../../../..</jboss.modules.dir>
    </properties>

    <build>

        <!--
	    Surefire test executions
	 -->
	 <plugins>

	    <plugin>
		<groupId>org.apache.maven.plugins</groupId>
		<artifactId>maven-surefire-plugin</artifactId>

                <configuration>
                    <!-- Prevent test and server output appearing in console. -->
                    <redirectTestOutputToFile>${testLogToFile}</redirectTestOutputToFile>
                    <failIfNoTests>false</failIfNoTests>

                    <!-- Arquillian's config files. -->
                    <additionalClasspathElements combine.children="append">
                        <additionalClasspathElement>${jboss.modules.dir}/src/config/arqWildfly</additionalClasspathElement>
                    </additionalClasspathElements>

					<systemProperties>
						<property>
							<name>java.util.logging.manager</name>
							<value>org.jboss.logmanager.LogManager</value>
						</property>
					</systemProperties>

                </configuration>

		<executions>
	            <execution>
		        <id>default-test</id>
		        <phase>test</phase>
		        <goals>
		            <goal>test</goal>
		        </goals>
		        <configuration>
		            <!-- Tests to execute. -->
		            <includes>
		                <include>org/jboss/additional/testsuite/jdkall/present/server/**/*TestCase.java</include>
		            </includes>
                            <excludes>
		                <include>org/jboss/additional/testsuite/jdkall/present/server/**/ModuleNotFoundExceptionTestCase.java</include>
		            </excludes>
		        </configuration>
		    </execution>
		</executions>
	    </plugin>

	    <plugin>
	        <groupId>org.apache.maven.plugins</groupId>
	        <artifactId>maven-antrun-plugin</artifactId>
	        <executions>
	            <execution>
	                <id>copy-deployments</id>
	                <phase>process-test-resources</phase>
	                <goals>
	                    <goal>run</goal>
	                </goals>
	                <configuration>
	                    <target>
                                <ant antfile="${jboss.modules.dir}/src/test/scripts/clean-deployments.xml">
	                            <property name="serverDir" value="/${jboss.modules.dir}/servers" />
	                            <target name="clean-deployments"/>
	                        </ant>
                                <ant antfile="${jboss.modules.dir}/src/test/scripts/copy-file.xml">
	                            <property name="fileName" value="helloWorld.ear" />
                                    <property name="filePath" value="${jboss.modules.dir}/servers/wildfly/build/target/jbossas/standalone/deployments" />
                                    <property name="fileToCopy" value="${jboss.modules.dir}/src/resources/helloWorld.ear" />
	                            <target name="copy-file"/>
	                        </ant>
                                <ant antfile="${jboss.modules.dir}/src/test/scripts/copy-file.xml">
	                            <property name="fileName" value="helloWorld2.ear" />
                                    <property name="filePath" value="${jboss.modules.dir}/servers/wildfly/build/target/jbossas/standalone/deployments" />
                                    <property name="fileToCopy" value="${jboss.modules.dir}/src/resources/helloWorld2.ear" />
	                            <target name="copy-file"/>
	                        </ant>
	                    </target>
	                </configuration>
	            </execution>
	        </executions>
	    </plugin>
        </plugins>

    </build>

</project>
