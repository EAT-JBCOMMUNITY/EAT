<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <!--
     *  ΙΔΕΑ : THE JBOSS TESTSUITE TO DEVELOP TESTS AGAINST INFINITE NUMBER OF JBOSS SERVERS
    -->

    <parent>
        <groupId>org.jboss</groupId>
        <artifactId>eap-additional-testsuite-modules</artifactId>
        <version>1.0.3.Final</version>
        <relativePath>../../../pom.xml</relativePath>
    </parent>

    <groupId>org.jboss</groupId>
    <artifactId>eap62x-additional-testsuite</artifactId>
    <packaging>pom</packaging>
    <version>1.0.3.Final</version>

    <name>eap additional testsuite: additional testsuite for eap 6.2.x</name>
    
    <properties>
        <version.org.jboss.arquillian.container.managed>7.1.3.Final</version.org.jboss.arquillian.container.managed>
    </properties>
           
    <profiles>
        <profile>
            <id>standalone</id>
            <activation>
                <property>
                    <name>standalone</name>
                    <value>true</value>
                </property>
            </activation>

            <dependencyManagement>
                <dependencies>
                    <dependency>
                        <groupId>org.jboss.as</groupId>
                        <artifactId>jboss-as-parent</artifactId>
                        <type>pom</type>
                        <version>${JBOSS_VERSION}</version>
                        <scope>import</scope>
                    </dependency>
                </dependencies>
            </dependencyManagement>

            <dependencies>
                <dependency>
                    <groupId>org.jboss.as</groupId>
                    <artifactId>jboss-as-arquillian-container-managed</artifactId>
                </dependency>
                <dependency>
                    <groupId>org.jboss.as</groupId>
                    <artifactId>jboss-as-testsuite-shared</artifactId>
                    <scope>compile</scope>
                    <exclusions>
                        <exclusion>
                            <groupId>com.github.relaxng</groupId>
                            <artifactId>relaxngDatatype</artifactId>
                        </exclusion>
                    </exclusions> 
                </dependency>
                <dependency>
                    <groupId>org.jboss.arquillian.junit</groupId>
                    <artifactId>arquillian-junit-container</artifactId>
                </dependency>
                <dependency>
                    <groupId>org.apache.httpcomponents</groupId>
                    <artifactId>httpclient</artifactId>
                </dependency>
                <dependency>
                    <groupId>org.jboss.spec.javax.servlet</groupId>
                    <artifactId>jboss-servlet-api_2.5_spec</artifactId>
                </dependency>
                <dependency>
                    <groupId>org.glassfish</groupId>
                    <artifactId>javax.enterprise.concurrent</artifactId>
                    <version>1.0</version>
                </dependency>   
                <dependency>
		    <groupId>org.apache.commons</groupId>
		    <artifactId>commons-lang3</artifactId>
		    <version>3.7</version>
		</dependency>
                <dependency>
                    <groupId>junit</groupId>
                    <artifactId>junit</artifactId>
                    <scope>compile</scope>
                </dependency>
            </dependencies> 
        </profile>

        <profile>
            <id>server-integration</id>
            <activation>
                <property>
                    <name>server-integration</name>
                    <value>true</value>
                </property>
            </activation>

            <dependencyManagement>
                <dependencies>
                    <dependency>
                        <groupId>org.jboss.as</groupId>
                        <artifactId>eap-boms</artifactId>
                        <type>pom</type>
                        <version>${JBOSS_VERSION}</version>
                        <scope>import</scope>
                    </dependency>
                </dependencies>
            </dependencyManagement>

            <dependencies>
                <dependency>
                    <groupId>org.jboss.as</groupId>
                    <artifactId>jboss-as-arquillian-container-managed</artifactId>
                </dependency>
                <dependency>
                    <groupId>org.jboss.as</groupId>
                    <artifactId>jboss-as-testsuite-shared</artifactId>
                    <scope>compile</scope>
                    <exclusions>
                        <exclusion>
                            <groupId>com.github.relaxng</groupId>
                            <artifactId>relaxngDatatype</artifactId>
                        </exclusion>
                    </exclusions> 
                </dependency>
                <dependency>
                    <groupId>org.jboss.arquillian.junit</groupId>
                    <artifactId>arquillian-junit-container</artifactId>
                </dependency>
                <dependency>
                    <groupId>org.apache.httpcomponents</groupId>
                    <artifactId>httpclient</artifactId>
                </dependency>
                <dependency>
                    <groupId>org.jboss.spec.javax.servlet</groupId>
                    <artifactId>jboss-servlet-api_2.5_spec</artifactId>
                </dependency>
                <dependency>
                    <groupId>org.glassfish</groupId>
                    <artifactId>javax.enterprise.concurrent</artifactId>
                    <version>1.0</version>
                </dependency>   
                <dependency>
                    <groupId>junit</groupId>
                    <artifactId>junit</artifactId>
                    <scope>compile</scope>
                </dependency>
            </dependencies> 
        </profile>

        <profile>
            <id>basicActivate</id>
            <activation>
                <property>
                    <name>module</name>
                    <value>basic</value>
                </property>
            </activation>
            <modules>
                <module>basic</module>
            </modules>
        </profile>

        <profile>
            <id>ejbActivate</id>
            <activation>
                <property>
                    <name>module</name>
                    <value>ejb</value>
                </property>
            </activation>
            <modules>
                <module>ejb</module>
            </modules>
        </profile>

        <profile>
            <id>clusteringActivate</id>
            <activation>
                <property>
                    <name>module</name>
                    <value>clustering</value>
                </property>
            </activation>
            <modules>
                <module>clustering</module>
            </modules>
        </profile>

        <profile>
            <id>jaxrsActivate</id>
            <activation>
                <property>
                    <name>module</name>
                    <value>jaxrs</value>
                </property>
            </activation>
            <modules>
                <module>jaxrs</module>
            </modules>
        </profile>

        <profile>
            <id>loggingActivate</id>
            <activation>
                <property>
                    <name>module</name>
                    <value>logging</value>
                </property>
            </activation>
            <modules>
                <module>logging</module>
            </modules>
        </profile>

        <profile>
            <id>managementActivate</id>
            <activation>
                <property>
                    <name>module</name>
                    <value>management</value>
                </property>
            </activation>
            <modules>
                <module>management</module>
            </modules>
        </profile>

        <profile>
            <id>messagingActivate</id>
            <activation>
                <property>
                    <name>module</name>
                    <value>messaging</value>
                </property>
            </activation>
            <modules>
                <module>messaging</module>
            </modules>
        </profile>

        <profile>
            <id>securityActivate</id>
            <activation>
                <property>
                    <name>module</name>
                    <value>security</value>
                </property>
            </activation>
            <modules>
                <module>security</module>
            </modules>
        </profile>

        <profile>
            <id>webActivate</id>
            <activation>
                <property>
                    <name>module</name>
                    <value>web</value>
                </property>
            </activation>
            <modules>
                <module>web</module>
            </modules>
        </profile>

        <profile>
            <id>weldActivate</id>
            <activation>
                <property>
                    <name>module</name>
                    <value>weld</value>
                </property>
            </activation>
            <modules>
                <module>weld</module>
            </modules>
        </profile>

        <profile>
	    <id>all</id>
	    <activation>
	        <property>
		    <name>!module</name>
	        </property>
	    </activation>
            <modules>
		<module>basic</module>
		<module>ejb</module>
		<module>jaxrs</module>
		<module>clustering</module>
		<module>logging</module>
		<module>management</module>
		<module>messaging</module>
		<module>security</module>
		<module>web</module>
		<module>weld</module>
	    </modules>
        </profile>

    </profiles>

    <build>
        <plugins>  

            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>build-helper-maven-plugin</artifactId>
                <version>1.10</version>
                <inherited>false</inherited>
                <executions>
                    <execution>
                        <id>add-test-source</id>
                        <phase>generate-test-sources</phase>
                        <goals>
                            <goal>add-test-source</goal>
                        </goals>
                        <configuration>
                            <sources>
                                <source>${basedir}/../../../src/main/java</source>
                                <source>${basedir}/../../../src2/main/java</source>
                            </sources>
                        </configuration>
                    </execution>
                </executions>
            </plugin>

        </plugins>
    </build>

</project>
