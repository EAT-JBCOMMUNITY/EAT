            </activation>
            <modules>
                <module>server</module>
            </modules>
        </profile>

        <profile>
            <id>webActivate</id>
            <activation>
                <property>
                    <name>module</name>
                    <value>web</value>
                </property>
            </activation>
            <modules>
                <module>web</module>
            </modules>
        </profile>

        <profile>
            <id>weldActivate</id>
            <activation>
                <property>
                    <name>module</name>
                    <value>weld</value>
                </property>
            </activation>
            <modules>
                <module>weld</module>
            </modules>
        </profile>

        <profile>
	    <id>all</id>
	    <activation>
	        <property>
		    <name>!module</name>
	        </property>
	    </activation>
            <modules>
                <module>basic</module>
		<module>core</module>
		<module>ejb</module>
		<module>elytron</module>
		<module>jaxrs</module>
		<module>clustering</module>
		<module>domain</module>
		<module>domain_management</module>
		<module>logging</module>
		<module>management</module>
		<module>messaging</module>
		<module>security</module>
		<module>server</module>
		<module>web</module>
