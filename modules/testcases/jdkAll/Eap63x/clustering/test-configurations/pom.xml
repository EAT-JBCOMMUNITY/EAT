<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <parent>
        <groupId>org.jboss</groupId>
        <artifactId>eap63x-additional-testsuite-clustering</artifactId>
        <version>1.0.1.Final-SNAPSHOT</version>
    </parent>

    <artifactId>eap63x-additional-testsuite-clustering-configuration</artifactId>
    <name>eap 6.3.x additional testsuite: clustering : configuration</name>
            
    <properties>
	<standalone.conf>${basedir}/../src/test/config/standaloneEap/standalone-full-ha.xml</standalone.conf>
        <jboss.modules.dir>${basedir}/../../../../..</jboss.modules.dir>
        <server>eap</server>
    </properties>
        
    <build>

        <!--
	    Surefire test executions
	 -->
	 <plugins>  
		            
	    <plugin>
		<groupId>org.apache.maven.plugins</groupId>
		<artifactId>maven-surefire-plugin</artifactId>

                <configuration>
                    <!-- Prevent test and server output appearing in console. -->
                    <redirectTestOutputToFile>${testLogToFile}</redirectTestOutputToFile>
                    <failIfNoTests>false</failIfNoTests>
                    <argLine>-Dstack=SYNC</argLine>

                    <systemPropertyVariables>
                        <arquillian.launch>clustering-all</arquillian.launch>
                    </systemPropertyVariables>

                    <!-- Arquillian's config files. -->
                    <additionalClasspathElements combine.children="append">
                        <additionalClasspathElement>${jboss.modules.dir}/src/config/arqEap/clustering</additionalClasspathElement>
                    </additionalClasspathElements>

                </configuration>

		<executions>
	            <execution>
		        <id>default-test</id>
		        <phase>test</phase>
		        <goals>
		            <goal>test</goal>
		        </goals>
		        <configuration>         
		            <!-- Tests to execute. -->
		            <includes>
		                <include>org/jboss/additional/testsuite/jdkall/past/eap_6_4_x/clustering/**/*TestCase.java</include>
		            </includes> 
		        </configuration>
		    </execution>
		</executions>
	    </plugin>
		         
   
            <!-- Add the Server Nodes and build the server configuration -->
	    <plugin>
	        <groupId>org.apache.maven.plugins</groupId>
	        <artifactId>maven-antrun-plugin</artifactId>
	        <executions>
	            <execution>
	                <id>copy-cluster-servers</id>
	                <phase>process-test-resources</phase>
	                <goals>
	                    <goal>run</goal>
	                </goals>
	                <configuration>
	                    <target>
	                        <ant antfile="${jboss.modules.dir}/src/test/scripts/clustering-build.xml">
	                            <property name="workspace" value="/${jboss.modules.dir}" />
                                    <property name="server" value="${server}" />
	                            <target name="build-clustering"/>
	                        </ant>
	                        <ant antfile="${jboss.modules.dir}/src/test/scripts/basic-build.xml">
	                            <property name="workspace" value="/${jboss.modules.dir}" />
                                    <property name="server" value="${server}" />
                                    <property name="dist" value="eap-SYNC-tcp-0" />
	                            <property name="standaloneConfiguration" value="${standalone.conf}" />
	                            <target name="build-basic-check"/>
	                        </ant>
	                        <ant antfile="${jboss.modules.dir}/src/test/scripts/basic-build.xml">
	                            <property name="workspace" value="/${jboss.modules.dir}" />
                                    <property name="server" value="${server}" />
                                    <property name="dist" value="eap-SYNC-tcp-1" />
	                            <property name="standaloneConfiguration" value="${standalone.conf}" />
	                            <target name="build-basic-check"/>
	                        </ant>
                                <ant antfile="${jboss.modules.dir}/src/test/scripts/copy-file.xml">
	                            <property name="fileName" value="application-roles.properties" />
                                    <property name="filePath" value="${jboss.modules.dir}/servers/eap/build/target/eap-SYNC-tcp-0/standalone/configuration" />
                                    <property name="fileToCopy" value="${jboss.modules.dir}/testcases/jdkAll/Eap63x/clustering/src/test/config/roles/application-roles.properties" />
	                            <target name="copy-file"/>
	                        </ant>
                                <ant antfile="${jboss.modules.dir}/src/test/scripts/copy-file.xml">
	                            <property name="fileName" value="application-users.properties" />
                                    <property name="filePath" value="${jboss.modules.dir}/servers/eap/build/target/eap-SYNC-tcp-0/standalone/configuration" />
                                    <property name="fileToCopy" value="${jboss.modules.dir}/testcases/jdkAll/Eap63x/clustering/src/test/config/roles/application-users.properties" />
	                            <target name="copy-file"/>
	                        </ant>
                                <ant antfile="${jboss.modules.dir}/src/test/scripts/copy-file.xml">
	                            <property name="fileName" value="application-roles.properties" />
                                    <property name="filePath" value="${jboss.modules.dir}/servers/eap/build/target/eap-SYNC-tcp-1/standalone/configuration" />
                                    <property name="fileToCopy" value="${jboss.modules.dir}/testcases/jdkAll/Eap63x/clustering/src/test/config/roles/application-roles.properties" />
	                            <target name="copy-file"/>
	                        </ant>
                                <ant antfile="${jboss.modules.dir}/src/test/scripts/copy-file.xml">
	                            <property name="fileName" value="application-users.properties" />
                                    <property name="filePath" value="${jboss.modules.dir}/servers/eap/build/target/eap-SYNC-tcp-1/standalone/configuration" />
                                    <property name="fileToCopy" value="${jboss.modules.dir}/testcases/jdkAll/Eap63x/clustering/src/test/config/roles/application-users.properties" />
	                            <target name="copy-file"/>
	                        </ant>
	                    </target>
	                </configuration>
	            </execution>
	        </executions>
	    </plugin>

        </plugins>
	
    </build>

</project>
