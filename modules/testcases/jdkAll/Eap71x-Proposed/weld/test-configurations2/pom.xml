<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <!--
     *  ΙΔΕΑ : THE JBOSS TESTSUITE TO DEVELOP TESTS AGAINST INFINITE NUMBER OF JBOSS SERVERS
    -->

    <parent>
        <groupId>org.jboss</groupId>
        <artifactId>eap71x-proposed-additional-testsuite-weld</artifactId>
        <version>1.0.3.Final</version>
    </parent>

    <artifactId>eap71x-proposed-additional-testsuite-weld-configuration2</artifactId>
    <name>eap71x-proposed additional testsuite: weld : configuration2</name>
            
    <properties>
        <jboss.modules.dir>${basedir}/../../../../..</jboss.modules.dir>
    </properties>
        
    <build>

        <!--
	    Surefire test executions
	 -->
	 <plugins>  
		            
	    <plugin>
		<groupId>org.apache.maven.plugins</groupId>
		<artifactId>maven-surefire-plugin</artifactId>

                <configuration>
                    <!-- Prevent test and server output appearing in console. -->
                    <redirectTestOutputToFile>${testLogToFile}</redirectTestOutputToFile>
                    <failIfNoTests>false</failIfNoTests>

                    <!-- Arquillian's config files. -->
                    <additionalClasspathElements combine.children="append">
                        <additionalClasspathElement>${jboss.modules.dir}/src/config/arqEap7</additionalClasspathElement>
                    </additionalClasspathElements>

                </configuration>

		<executions>
	            <execution>
		        <id>default-test</id>
		        <phase>test</phase>
		        <goals>
		            <goal>test</goal>
		        </goals>
		        <configuration>         
		            <!-- Tests to execute. -->
		            <includes>
		                <include>org/jboss/additional/testsuite/jdkall/present/weld/**/WeldBeanDiscoveryTest.java</include>
		            </includes> 
		        </configuration>
		    </execution>
		</executions>
	    </plugin>

            <plugin>
	        <groupId>org.apache.maven.plugins</groupId>
	        <artifactId>maven-antrun-plugin</artifactId>
	        <executions>
	            <execution>
	                <id>copy-deployments</id>
	                <phase>process-test-resources</phase>
	                <goals>
	                    <goal>run</goal>
	                </goals>
	                <configuration>
	                    <target>
                                <ant antfile="${jboss.modules.dir}/src/test/scripts/copy-file.xml">
                                    <property name="filePath" value="${jboss.modules.dir}/servers/eap7/build/target/jbossas/standalone/deployments" />
                                    <property name="fileToCopy" value="${jboss.modules.dir}/testcases/jdkAll/Eap71x-Proposed/weld/test-configurations2/src/test/resources/CDIAppMaven.war" />
	                            <target name="copy-file"/>
	                        </ant>
                                <ant antfile="${jboss.modules.dir}/src/test/scripts/copy-dir.xml">
                                    <property name="todir" value="${jboss.modules.dir}/servers/eap7/build/target/jbossas/modules/system/layers/base" />
                                    <property name="folderToCopy" value="${jboss.modules.dir}/testcases/jdkAll/Eap71x-Proposed/weld/test-configurations2/src/test/resources/modules" />
	                            <target name="copy-dir"/>
	                        </ant>
	                    </target>
	                </configuration>
	            </execution>
	        </executions>
	    </plugin>
        </plugins> 
		            
    </build>

</project>
