<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <!--
     *  ΙΔΕΑ : THE JBOSS TESTSUITE TO DEVELOP TESTS AGAINST INFINITE NUMBER OF JBOSS SERVERS
    -->

    <parent>
        <groupId>org.jboss</groupId>
        <artifactId>wildfly-release-27.0.0.Final-additional-testsuite</artifactId>
        <version>1.0.3.Final</version>
    </parent>

    <artifactId>wildfly-release-27.0.0.Final-additional-testsuite-spring</artifactId>
    <packaging>pom</packaging>
    <name>wildfly-release-27.0.0.Final additional testsuite: spring</name>


    <properties>
        <moduledir>${basedir}/../../../../servers/wildfly/build/target/jbossas/modules</moduledir>
        <spring.module>${basedir}/../../../../src1/resources/updatedModulesSpring</spring.module>
    </properties>

    <profiles>
        <profile>
            <id>b-profile</id>
            <activation>
                <property>
                    <name>b</name>
                </property>
            </activation>    
	
            <modules>
		<module>buildapp-dir</module>
                <module>buildapp2-dir</module>
	    </modules>

        </profile>

        <profile>
            <id>springtests</id>
            <activation>
                <property>
                    <name>!disableSpringTests</name>
                </property>
            </activation>       
	    <modules>
		<module>test-configurations</module>
	    </modules>

        </profile>

    </profiles>

    <build>
        <plugins>  

            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>build-helper-maven-plugin</artifactId>
                <version>1.10</version>
                <executions>
                    <execution>
                        <id>add-test-source</id>
                        <phase>generate-test-sources</phase>
                        <goals>
                            <goal>add-test-source</goal>
                        </goals>
                        <configuration>
                            <sources>
                                <source>${basedir}/../src/main/java</source>
                            </sources>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-antrun-plugin</artifactId>
                        <executions>
                            <execution>
                                <id>copy-modules</id>
                                <inherited>false</inherited>
                                <phase>validate</phase>
                                <goals>
                                    <goal>run</goal>
                                </goals>
                                <configuration>
                                    <target>
                                        <copy todir="${moduledir}" preservelastmodified="false" overwrite="true" >
					    <fileset dir="${spring.module}">
						<include name="**/**"/>
					    </fileset>
					</copy>  
                                    </target> 
                                </configuration>
                            </execution>
                        </executions>
                    </plugin>
        </plugins>
    </build>

</project>
