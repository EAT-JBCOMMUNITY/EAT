<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <parent>
        <groupId>org.jboss</groupId>
        <artifactId>eap-additional-testsuite-web</artifactId>
        <version>1.0.1.Final-SNAPSHOT</version>
    </parent>

    <artifactId>eap-additional-testsuite-web-configuration</artifactId>
    <name>eap additional testsuite: web : configuration</name>
            
    <properties>
        <standalone.conf>../src/test/config/standaloneEap/standalone.xml</standalone.conf>
        <jboss.modules.dir>${basedir}/../../../../..</jboss.modules.dir>
        <surefire.memory.args>-Xmx512m -XX:MaxPermSize=256m</surefire.memory.args>
        <surefire.system.args>${surefire.memory.args} -Djboss.dist=${jboss.modules.dir}/eap/build/target/jbossas -DjbossHome=${jboss.modules.dir}/eap/build/target/jbossas</surefire.system.args>
    </properties>
        
    <build>

        <!--
           Surefire test executions
        -->
        <plugins>  
		            
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-surefire-plugin</artifactId>

                <executions>
                    <execution>
                        <id>default-test</id>
                        <phase>test</phase>
                        <goals>
                            <goal>test</goal>
                        </goals>
                        <configuration>         
                            <!-- Tests to execute. -->
                            <includes>
                                <include>org/jboss/additional/testsuite/jdkall/web/classloading/war/**/*TestCase.java</include>
                                <include>org/jboss/additional/testsuite/jdkall/web/servlet/**/*TestCase.java</include>
                                <include>org/jboss/additional/testsuite/jdkall/web/mtom/**/*TestCase.java</include>
                            </includes> 
                        </configuration>
                    </execution>
                </executions>

                <configuration>
                    <!-- Prevent test and server output appearing in console. -->
                    <redirectTestOutputToFile>${testLogToFile}</redirectTestOutputToFile>

                    <systemPropertyVariables>
                        <jboss.options>${surefire.system.args}</jboss.options>
                        <jboss.home>${jboss.modules.dir}/eap/build/target/jbossas</jboss.home>
                        <module.path>${jboss.modules.dir}/eap/build/target/jbossas/modules</module.path>
                    </systemPropertyVariables>

                    <!-- Arquillian's config files. -->
                    <additionalClasspathElements combine.children="append">
                        <additionalClasspathElement>${jboss.modules.dir}/src/config/arqEap</additionalClasspathElement>
                    </additionalClasspathElements>

                </configuration>
            </plugin>

        </plugins>
    </build>

</project>
