<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#C34646"
        android:orientation="vertical"
        android:gravity="center"
        tools:context=".MainActivity">

    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Default Theme"
            android:onClick="goToDefault"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:text="Random Theme"
            android:onClick="goToRandom"/>
    <TextView
            android:text="This is an alternative version of the original app in the context of EAT project // GSoC 2022"
            android:layout_width="303dp"
            android:layout_height="wrap_content" android:id="@+id/NewVersionText" android:textColor="#FFFFFF"
            android:textAlignment="center"/>

</LinearLayout>